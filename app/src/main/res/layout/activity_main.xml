<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ivi_main_bg"
    tools:context=".ui.MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:navGraph="@navigation/navigation_main"
        app:defaultNavHost="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82.2dp"
        android:background="@drawable/drop_shadow_tabs_bg"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:gravity="bottom"
            android:paddingStart="2dp"
            android:paddingTop="2dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/tab_loans"
                    android:clickable="true"
                    android:onClick="onTabClick"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_tabs_selected"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="31.88dp"
                        android:layout_height="28.13dp"
                        android:layout_marginTop="9.28dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_loans_tab" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginTop="10.28dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/ropasans_regular"
                        android:gravity="top"
                        android:text="ЗАЙМЫ"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center">

                <LinearLayout
                    android:id="@+id/tab_cards"
                    android:clickable="true"
                    android:onClick="onTabClick"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="4dp">

                    <ImageView
                        android:layout_width="31.88dp"
                        android:layout_height="28.13dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_cards_tab" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginTop="10.28dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/ropasans_regular"
                        android:gravity="top"
                        android:text="КАРТЫ"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end">

                <LinearLayout
                    android:id="@+id/tab_credits"
                    android:clickable="true"
                    android:onClick="onTabClick"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="30dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_credits_tab" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/ropasans_regular"
                        android:gravity="top"
                        android:text="КРЕДИТЫ"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>