<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hedgehog="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="23dp"
    android:layout_marginBottom="26dp"
    android:background="@drawable/ic_rectangle_1"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/proposal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/notosans_medium"
            android:text="MoneyMan"
            android:textColor="@color/black"
            android:textSize="22sp" />


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/proposal_image"
            android:layout_width="184dp"
            android:layout_height="84dp"
            android:layout_marginStart="3dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            app:riv_border_width="0dp"
            app:riv_corner_radius="25dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/summ_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:text="Сумма:"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/summ_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:text="до 35 000 руб"
                        android:textAlignment="center"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/percent_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:gravity="center"
                        android:text="Ставка:"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/percent_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:layout_marginTop="9dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="от 0%"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/visa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_visa" />

                        <ImageView
                            android:id="@+id/mastercard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1.88dp"
                            android:src="@drawable/ic_master" />

                        <ImageView
                            android:id="@+id/yandex_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1.88dp"
                            android:src="@drawable/ic_y_money" />

                        <ImageView
                            android:id="@+id/quiwi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1.88dp"
                            android:src="@drawable/ic_qivi" />

                        <ImageView
                            android:id="@+id/world"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1.88dp"
                            android:src="@drawable/ic_mir" />

                        <ImageView
                            android:id="@+id/nal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1.88dp"
                            android:src="@drawable/ic_cash" />

                    </LinearLayout>
                </HorizontalScrollView>


                <ImageView
                    android:id="@+id/star_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_icon_star_outline" />

                <ImageView
                    android:id="@+id/star_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_icon_star_outline" />

                <ImageView
                    android:id="@+id/star_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_icon_star_outline" />

                <ImageView
                    android:id="@+id/star_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_icon_star_outline" />

                <ImageView
                    android:id="@+id/star_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_icon_star_outline" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <LinearLayout
                android:id="@+id/order"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="40dp"
                android:layout_weight="1"
                android:background="@drawable/ic_button_outline_blue"
                android:clickable="true"
                android:gravity="center"
                android:maxWidth="157dp">

                <TextView
                    android:id="@+id/order_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ropasans_regular"
                    android:includeFontPadding="false"
                    android:text="ОФОРМИТЬ"
                    android:textAllCaps="true"
                    android:textColor="#EA0042"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/ic_button_outline_dark"
                android:clickable="true"
                android:gravity="center"
                android:maxWidth="157dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ropasans_regular"
                    android:includeFontPadding="false"
                    android:text="ПОДРОБНЕЕ"
                    android:textColor="#222F52"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>